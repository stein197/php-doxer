<phpunit verbose="true" cacheResult="false">
	<testsuites>
		<testsuite name="tests">
			<directory>tests</directory>
		</testsuite>
	</testsuites>
	<coverage>
		<include>
			<directory suffix=".php">src</directory>
		</include>
		<report>
			<html outputDirectory=".coverage" lowUpperBound="50" highLowerBound="90"/>
			<!-- <text/> -->
		</report>
	</coverage>
</phpunit>
